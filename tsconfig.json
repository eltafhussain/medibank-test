{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/hooks/*": [
                "src/hooks/*"
            ],
            "@/types/*": [
                "src/types/*"
            ],
        },
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "jest",
            "@testing-library/jest-dom"
        ],
    },
    "include": [
        "src"
    ]
}